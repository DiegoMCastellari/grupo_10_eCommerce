<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
    <link rel="stylesheet" href="/stylesheets/productos.css">
</head>

<body>
    <div class="container">

        <header>
            <div class="tituloh2">
                <h2>ENVÍOS A TODO EL PAÍS</h2>
            </div>
            <menu>
                <i class="fas fa-bars"></i></i>
            </menu>
            <div class="logoArlequin">
                <img src="/img/logoArlequin.jpg" height="100%" alt="Logo Arlequin">
            </div>
            <div class="logo">
                <a href="/">Wildcard</a>
            </div>
            <div class="barraYCarrito">
                <div class="barraDeBusqueda"> 
                <form action="/products/search/" method="POST">
                <input type="text" name="search" id="barraDeBusqueda" placeholder="Buscar productos">
                <Button type="submit"><i class="fas fa-search"></i></Button>
                </form>
            </div>
                <div class="carrito">
                    <i class="fas fa-shopping-cart" onclick="javascript:location.href='/users/carrito'"></i>
                </div>
            </div>
            <nav>
                <ul class="menu">
                    <li >
                        <a href="/products">COLECCION</a> 
                    </li>
                    <li>
                        <a href="/products">ACCESORIOS</a> 
                    </li>
                    <li>
                        <a href="/ayuda">AYUDA</a> 
                    </li>
                    <li>
                        <a href="/contactanos">CONTACTANOS</a> 
                    </li>
                    </ul>
                <ul class="usuario">
                    <li>
                        <a href="/users/login">INICIAR SESION</a>  
                    </li>
                    <li>
                        <a href="/users/register">CREAR CUENTA</a>  
                    </li>
                </ul>
            </nav>
            <div class="logoWsapp"><i class="fab fa-whatsapp"></i></div>
            
        </header>

        <main>
            <aside class="aside">
                <%- include('../partials/filtroListaProductos') %>
            </aside>
            <section class="producto"  >
                <% for ( var i =0; i < productos.length; i++){ %>
                    
                    <div class="calzado" onclick="javascript:location.href='/products/<%= productos[i].id %>'">
                        <p class="titulo"><%=productos[i].nombre%></p> 
                        <p class="precio">$ <%= toThousand(productos[i].precio) %></p> 
                        <p class="oferta">(<%=productos[i].descuento%> OFF)</p>
                        <p class="envio">Envio</p> 
                    </div>
                    
                <%}%>

             
            </section>
            
        </main>

        <%- include('../partials/footer') %>

    </div>
</body>
</html>